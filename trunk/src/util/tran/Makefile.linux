EXE =	ats2bmw ats2brd ats2gem ats2mf ats2pal ats2usr brd2gem transacct transbrd


all:
	@$(MAKE) CC=@CC@ CFLAGS="@CFLAGS@ -pipe -I../../include -fomit-frame-pointer -Wunused" LDFLAGS="-s -L../../lib -ldao" $(EXE)


.c:	;  $(CC) -o $@ $@.c $(CFLAGS) $(LDFLAGS)


install: $(EXE)
# 不複製到 bin/ 下
#	install -m 0700 $? $(HOME)/bin
	@echo "ok!"

install-deb: $(EXE)
	install -m 0700 -o @BBSUID@ $? @DESTDIR@/src/util/tran
	@echo "ok!"

clean:
	rm -f $(EXE) *.exe *.o *~
